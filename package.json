{
  "name": "paintablejs",
  "private": true,
  "version": "1.0.1",
  "author": "Ren√© Heinen <r.heinen@nanogiants.de>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Blackfaded/paintable.git"
  },
  "description": "This package lets you draw on a canvas.",
  "keywords": [
    "vue",
    "react",
    "angular",
    "javascript",
    "typescript",
    "paintable",
    "paint",
    "canvas",
    "draw"
  ],
  "license": "MIT",
  "scripts": {
    "build:ci": "yarn build:all && node scripts/copyDocs.js",
    "build:all": "yarn build:core && concurrently \"yarn build:react\" \"yarn build:vue\" \"yarn build:angular\"",
    "build:core": "yarn workspace core build",
    "build:react": "yarn workspace react build",
    "build:vue": "yarn workspace vue build",
    "build:angular": "yarn workspace angular build",
    "dev:all": "concurrently \"yarn dev:core\" \"yarn dev:react\" \"yarn dev:vue\"  \"yarn dev:angular\"",
    "dev:core": "yarn workspace core dev",
    "dev:react": "yarn workspace react dev",
    "dev:vue": "yarn workspace vue dev",
    "dev:angular": "yarn workspace angular dev",
    "example:react": "yarn workspace example-react serve",
    "example:vue": "yarn workspace example-vue serve",
    "example:angular": "yarn workspace example-angular serve",
    "example:core": "yarn workspace example-core serve",
    "clean:dist": "node ./scripts/clearDist.js",
    "clean:modules": "rm -rf node_modules && rm -rf packages/**/*/node_modules",
    "reinstall": "yarn clean:dist && yarn clean:modules && yarn",
    "postversion": "node ./scripts/bumpDistVersion && git add . && git commit -m \"Update version to $npm_package_version\""
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/examples/*",
      "packages/bindings/*"
    ]
  },
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
